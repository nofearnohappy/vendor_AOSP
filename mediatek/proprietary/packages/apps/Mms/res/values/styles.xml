<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="TextAppearance">
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textColorHighlight">#FFFF9200</item>
        <item name="android:textColorHint">?android:textColorHint</item>
        <item name="android:textColorLink">#5C5CFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextAppearance.SearchResult">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">?android:textColorPrimaryInverse</item>
        <item name="android:textColorHint">?android:textColorHintInverse</item>
    </style>

    <style name="TextAppearance.SearchResult.Title">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.SearchResult.Subtitle">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="MmsTheme" parent="@android:style/Theme.Material.Light">
           <item name="android:colorPrimary">@color/primary</item>   
           <item name="android:colorPrimaryDark">@color/primary_dark</item>
           <item name="android:textColorPrimary">@color/white</item>
           <item name="android:textColor">@*android:color/primary_text_light</item>
           <item name="android:actionBarWidgetTheme">@style/HoloLightSelectMode</item>
           <item name="android:actionModeStyle">@style/MmsActionMode</item>
           <item name="android:colorAccent">@color/primary</item>
           <item name="android:alertDialogTheme">@style/SmsAlertDialog</item>
           <item name="android:actionBarSize">@dimen/atcionbar_size</item>
           <item name="android:editTextBackground">@null</item>
    </style>

    <style name="MmsActionBarTheme" parent="@android:style/Theme.Material.Light">
           <item name="android:colorPrimary">@color/primary</item>   
           <item name="android:colorPrimaryDark">@color/primary_dark</item>
           <item name="android:textColorPrimary">@color/white</item>
           <item name="android:textColor">@*android:color/primary_text_light</item>
           <item name="android:actionBarSize">@dimen/atcionbar_size</item>
    </style>

    <style name="MmsActionMode" parent="@android:style/Widget.Material.Light.ActionMode">
        <item name="android:background">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:actionModeBackground">@color/primary</item>
    </style>
    <style name="MmsActionBar" parent="@android:style/ThemeOverlay.Material.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="MmsProxyTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:windowDisablePreview">true</item>
    </style>
     <style name="WidgetTitle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#333333</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NotificationPrimaryText">

    </style>

    <style name="NotificationSecondaryText">
        <item name="android:textColor">#666666</item>
    </style>

    <style name="NotificationSubjectText">
        <item name="android:textColor">#999999</item>
    </style>
    <style name="TextShadowLight">
        <item name="android:textColor">@color/solid_white</item>
        <item name="android:shadowColor">@color/text_shadow_color_light</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
    </style>
    <style name="BannerTitleText" parent="TextShadowLight">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BannerContentText" parent="TextShadowLight">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MultiSelectionHoloTheme" parent="@android:style/Theme.Holo.Light">
		<item name="android:actionBarStyle">@style/MultiSelectionActionBarStyle</item>
	</style>
	
	<style name="MultiSelectionActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@drawable/cab_background_top_holo_dark</item>
        <item name="android:backgroundStacked">@drawable/cab_background_top_holo_dark</item>
        <item name="android:backgroundSplit">@drawable/cab_background_bottom_holo_dark</item>
        <item name="android:itemPadding">8dip</item>
    </style>
  <!-- Dialog mode-->
  <style name="SmsDlgScreen" parent="@android:style/Theme.Material.Light.Dialog">
      <item name="android:windowNoTitle">true</item>
      <item name="android:colorPrimary">@color/primary</item>
      <item name="android:colorPrimaryDark">@color/primary_dark</item>
      <item name="android:textColorPrimary">@color/white</item>
      <item name="android:textColor">@*android:color/primary_text_light</item>
      <item name="android:actionModeStyle">@style/MmsActionMode</item>
      <item name="android:colorAccent">@color/primary</item>
      <item name="android:editTextBackground">@null</item>

  </style>

    <style name="SmsAlertDialog" parent="@android:style/Theme.Material.Light.Dialog.Alert">
      <item name="android:colorPrimary">@color/primary</item>
      <item name="android:colorPrimaryDark">@color/primary_dark</item>
      <item name="android:textColor">@*android:color/primary_text_light</item>
      <item name="android:colorAccent">@color/primary</item>
  </style>

    <!-- IpMessage -->
    <style name="out_going_time_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">4dip</item>
        <item name="android:textColor">#555555</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="out_going_type_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">3dip</item>
        <item name="android:paddingRight">3dip</item>
        <item name="android:layout_marginRight">4dip</item>
        <item name="android:textColor">#555555</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:maxWidth">100dip</item>
    </style>

    <style name="separator_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">2px</item>
        <item name="android:background">@drawable/ipmsg_chat_split_line</item>
    </style>

    <style name="bubble_name_separator_style" parent="@style/separator_style">
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="caption_separator_style" parent="@style/bubble_name_separator_style">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

    <style name="group_member_name_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">#5a5a5a</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MmsHoloThemeWhite" parent="@style/MmsTheme">
        <item name="android:actionBarWidgetTheme">@style/HoloLightSelectMode</item>
    </style>
    <style name="HoloLightSelectMode" parent="android:style/Widget.Material.Light.ListPopupWindow">
        <item name="android:popupBackground">@null</item>
    </style>

    <!-- M: media controller style @{-->
    <style name="MediaButton">
        <item name="android:background">@null</item>
        <item name="android:layout_width">71dip</item>
        <item name="android:layout_height">52dip</item>
    </style>

    <style name="MediaButton.Previous">
        <item name="android:src">@drawable/ic_media_pre</item>
    </style>

    <style name="MediaButton.Next">
        <item name="android:src">@drawable/ic_media_next</item>
    </style>

    <style name="MediaButton.Play">
        <item name="android:src">@drawable/ic_media_play</item>
    </style>

    <style name="MediaButton.Ffwd">
        <item name="android:src">@drawable/ic_media_ff</item>
    </style>

    <style name="MediaButton.Rew">
        <item name="android:src">@drawable/ic_media_rew</item>
    </style>

    <style name="MediaButton.Pause">
        <item name="android:src">@drawable/ic_media_pause</item>
    </style>
    <!-- @}-->

    <!-- mwi style begin -->
    <style name="mwi_dialog" parent="@android:style/Theme.DeviceDefault.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
    <!-- mwi style end -->

    <style name="BackgroundOnlyTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowNoDisplay">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="ConversationListTheme" parent="MmsTheme">
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColorHighlight">@android:color/holo_blue_light</item>
    </style>
</resources>
