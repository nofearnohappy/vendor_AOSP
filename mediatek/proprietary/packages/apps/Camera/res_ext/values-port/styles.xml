    <style name="videoFaceBeautyInfo">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginLeft">52dp</item>
        <!-- why is 451,because the vFB height and settings margin_bottom is
        //864+104=968,but the view height is 44,so view margin_bottom will be :
        (968 - 44)/2 =462,but we need the view is in the middle of the left icon
        so, the finally value need:462 - (104 - 44)/2/2 = 451dp
         -->
         <!-- 
                 <item name="android:layout_marginBottom">347dp</item>
         
          -->

    </style>
