<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_gravity="center"
	android:orientation="vertical" >

	<RelativeLayout
		android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView
			android:id="@+id/presetName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentStart="true"
			android:layout_alignParentTop="true"
			android:layout_marginStart="29sp"
			android:layout_marginTop="39sp"
			android:text="@string/off"
			android:textAppearance="@style/TextAppearanceLarge"
			android:textSize="28sp" />

		<ImageView
			android:id="@+id/revertButtonMain"
			android:layout_width="25sp"
			android:layout_height="24sp"
			android:layout_alignBottom="@+id/presetName"
			android:layout_marginBottom="6sp"
			android:layout_marginStart="12sp"
			android:layout_toEndOf="@+id/presetName"
			android:soundEffectsEnabled="false"
			android:src="@drawable/revert_profile" />

		<EditText
			android:id="@+id/presetNameEdit"
			android:layout_width="460sp"
			android:layout_height="64sp"
			android:layout_alignBaseline="@+id/presetName"
			android:layout_alignStart="@+id/presetName"
			android:background="@drawable/blueframe"
			android:inputType="textCapCharacters|textNoSuggestions"
			android:textColor="@color/white"
			android:textSize="48sp"
			android:textStyle="normal"
			android:visibility="gone" />
	</RelativeLayout>

</LinearLayout>
